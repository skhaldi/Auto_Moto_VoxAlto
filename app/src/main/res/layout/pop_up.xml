<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#444444"
    android:orientation="vertical"
    android:padding="10sp"
    android:weightSum="1" >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#dbf8fc">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/InfoLayoutPopUp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.55">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:weightSum="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp">
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:weightSum="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="15dp">
                </TableRow>

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="VIN (*)"
                        android:id="@+id/textViewPopUp"
                        android:layout_gravity="center_vertical|bottom" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TFvinPopUp"
                        android:layout_gravity="center_vertical|bottom"
                        android:layout_weight="1.00"
                        android:textColor="#3e2723"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="41dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Or"
                        android:id="@+id/textViewOr"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:textStyle="italic"
                        android:textSize="14sp"/>
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Make (*)"
                        android:id="@+id/textViewMakePopUp"
                        android:layout_gravity="center_vertical|bottom" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TFmakePopUp"
                        android:layout_gravity="center_vertical|top"
                        android:layout_weight="1.00"
                        android:textColor="#3e2723"
                        android:layout_marginRight="40dp"
                        android:layout_marginLeft="20dp" />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Model (*)"
                        android:id="@+id/textViewModelPopUp"
                        android:layout_gravity="center_vertical|bottom" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TFmodelPopUp"
                        android:layout_gravity="center_vertical|top"
                        android:layout_weight="1.00"
                        android:textColor="#3e2723"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp" />
                </LinearLayout>
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Year (*)"
                        android:id="@+id/textViewYearPopUp"
                        android:layout_gravity="center_vertical|bottom" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TFyearPopUp"
                        android:layout_gravity="center_vertical|top"
                        android:layout_weight="1.00"
                        android:textColor="#3e2723"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="40dp" />
                </LinearLayout>
            </TableLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>