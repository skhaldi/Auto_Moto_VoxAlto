<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:orientation="vertical">

    <ListView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/lv_sliding_menu"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:layout_gravity="start"/>

    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical"
        tools:context="com.voxalto.automotovoxalto.AddCar"
        android:id="@+id/add_car_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/InfoLayout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:weightSum="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Add Car"
                    android:id="@+id/textView2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="bold"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:weightSum="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Add a new car by VIN : Please enter your car&apos;s VIN"
                    android:id="@+id/textViewIntro1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="italic"
                    android:textSize="14sp"/>
            </TableRow>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="VIN (*)"
                        android:id="@+id/textView"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TFvin"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.00"
                        android:textColor="#3e2723" />

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="86dp"
                        android:layout_height="wrap_content"
                        android:text="Scan"
                        android:id="@+id/Bscan"
                        android:layout_gravity="center|right"
                        android:onClick="OnClickButtonScan"
                        android:background="@drawable/round_green_btn"/>
            </LinearLayout>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:weightSum="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Or"
                    android:id="@+id/textViewOr"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="italic"
                    android:textSize="14sp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:weightSum="1"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Add a new car by Make/Model/Year : Please enter your car&apos;s information"
                    android:id="@+id/textViewIntro2"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:textStyle="italic"
                    android:textSize="14sp"/>
            </TableRow>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Make (*)"
                    android:id="@+id/textViewMake"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TFmake"
                    android:layout_gravity="center_vertical|bottom|top"
                    android:layout_weight="1.00"
                    android:textColor="#3e2723"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp" />
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Model (*)"
                    android:id="@+id/textViewModel"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TFmodel"
                    android:layout_gravity="center_vertical|bottom|top"
                    android:layout_weight="1.00"
                    android:textColor="#3e2723"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp" />
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Year (*)"
                    android:id="@+id/textViewYear"
                    android:layout_gravity="center_vertical" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TFyear"
                    android:layout_gravity="center_vertical|bottom|top"
                    android:layout_weight="1.00"
                    android:textColor="#3e2723"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="60dp" />
            </LinearLayout>
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    style="@style/AlertDialog.AppCompat.Light"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:id="@+id/cancel"
                    android:layout_gravity="center_horizontal|right"
                    android:layout_marginRight="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_red_btn"
                    android:onClick="OnClickButtonCancel" />

                <Button
                    style="@style/Base.Theme.AppCompat.Light"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="Scan"
                    android:id="@+id/Bscan2"
                    android:layout_gravity="center_horizontal|right"
                    android:layout_marginRight="50dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/round_green_btn"
                    android:onClick="OnClickButtonAddCar" />
            </LinearLayout>
        </TableLayout>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>